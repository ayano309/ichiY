<div class="container">
  <h1 class="text-center my-5">ご予約内容確認</h1>
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"  class="table-active text-center align-middle">お名前</th>
          <td><%= @reservation.name %>様</td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center align-middle">メールアドレス</th>
          <td><%= @reservation.email %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center align-middle">電話番号</th>
          <td><%= @reservation.phone %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center align-middle">ご予約日</th>
          <td><%= l @reservation.reservation_day, format: :long %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center align-middle">ご予約時間</th>
          <td><%= @reservation.reservation_time_i18n %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center align-middle">予約数</th>
          <td><%= @reservation.number_of_items %></td>
        </tr>
      </table>
      <%= form_with model: @reservation, local: true, id: "reservation_form" do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone %>
        <%= f.hidden_field :reservation_day %>
        <%= f.hidden_field :reservation_time %>
        <%= f.hidden_field :number_of_items %>
        <div class="actions text-center mb-3">
          <%= f.submit "予約する", class: "btn btn-new w-100" %>
        </div>
      <% end %>
      <%= form_with model: @reservation, method: :post, url: reservations_back_path, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :phone %>
        <%= f.hidden_field :reservation_day %>
        <%= f.hidden_field :reservation_time %>
        <%= f.hidden_field :number_of_items %>
      <div class="actions text-center mb-3">
        <%= f.submit "入力画面に戻る", class: "btn btn-secondary w-100" %>
      </div>
    <% end %>
      <div class="text-center mb-5">
        <%= link_to "TOPへ", root_path %>
      </div>
    </div>
  </div>
</div>