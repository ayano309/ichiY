<% @reservations.each do |reservation| %>
  <tr>
    <td class="text-nowrap">
      <%= l reservation.reservation_day, format: :short %>
    </td>
    <td class="text-nowrap">
      <%= reservation.reservation_time %>
    </td>
    <td class="text-nowrap">
      <%= reservation.name %>様
    </td>
    <td class="text-nowrap">
      <%= reservation.number_of_items %>個
    </td>
    <td class="text-nowrap">
      <%= reservation.reservation_status_i18n %>
    </td>
    <td class="text-nowrap">
      <%= link_to dashboard_reservation_path(reservation), class: "btn btn-detail btn-sm" do %>
        詳細
      <% end%>
      <%= link_to edit_dashboard_reservation_path(reservation), class: "btn btn-outline-success btn-sm" do %>
        変更
      <% end%>
    </td>
  </tr>
<% end %>