<div class="content">
  <h1>商品管理</h1>
  <div class="mt-2">
    <div class="d-flex justify-content-between w-75 mt-4">
      <%= link_to "新規作成", new_dashboard_product_path, class: "btn btn-primary" %>
    </div>
    <table class="table table-responsive mt-5">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">画像</th>
          <th scope="col">商品名</th>
          <th scope="col">価格</th>
          <th scope="col">カテゴリ名</th>
          <th scope="col">タグ</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th scope="row"><%= item.id %></td>
          <td>
            <% if item.image.attached? %>
              <%= image_tag item.image, :size => '100x100' %>
            <% else %>
              <%= image_tag "salt.png", :size => '100x100' %>
            <% end %>
          </td>
          <td><%= item.name %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td>
            <%= link_to "編集", edit_dashboard_item_path(item), class: " btn btn-outline-success  btn-sm" %>
          </td>
          <td>
            <%= link_to "削除", dashboard_item_path(item), method: :delete, class: "btn btn-outline-danger btn-sm" %>
          </td>                  
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>