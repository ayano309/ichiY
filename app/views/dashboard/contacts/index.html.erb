<div class="container p-3 p-md-4 p-lg-5">
  <div class="my-3">
    <h2>お問い合わせ</h2>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col" class="text-nowrap">問い合わせ日時</th>
              <th scope="col" class="text-nowrap">項目</th>
              <th scope="col" class="text-nowrap">ステータス</th>
              <th scope="col" class="text-nowrap"></th>
            </tr>
          </thead>
          <tbody>
            <%= render 'contact',contacts: @contacts %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @contacts %>
  </div>
</div>