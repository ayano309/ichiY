<div class="container p-3 p-md-4 p-lg-5">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="my-3">
        <h2>予約履歴</h2>
        <p><%=@user.name%>様</p>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered bg-white">
          <thead>
            <tr>
              <th scope="col">来店日</th>
              <th scope="col">時間</th>
              <th scope="col">予約数</th>
              <th scope="col">ステータス</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "reservation", collection: @reservations %>
          </tbody>
        </table>
      </div>
      <div class="row justify-content-center">
        <%= paginate @reservations %>
      </div>
      <div class="text-center mb-3">
        <%= link_to "一覧へ", dashboard_reservations_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>